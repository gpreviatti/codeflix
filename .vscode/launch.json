{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Api - Dev",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/backend/Catalog/src/Api/bin/Debug/net6.0/Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/backend/Catalog/src/Api",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        }
    ]
}
